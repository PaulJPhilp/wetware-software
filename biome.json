{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "error",
        "noUnknownAtRules": "off",
        "useAwait": "error",
        "noConsole": "off"
      },
      "style": {
        "useImportType": "error",
        "useFilenamingConvention": "off",
        "noNonNullAssertion": "warn",
        "noUselessElse": "error",
        "noMagicNumbers": "off"
      },
      "complexity": {
        "useSimpleNumberKeys": "error",
        "useOptionalChain": "error"
      },
      "performance": {
        "noBarrelFile": "off"
      }
    }
  },
  "css": {
    "linter": {
      "enabled": true
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "extends": [
    "ultracite/core",
    "ultracite/next"
  ],
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json"
}